<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- rename to hibernate.cfg.xml if you want to use example4 -->
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://localhost:1433;databaseName=database1</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">reallyStrongPwd123</property>
        <property name="hibernate.default_schema">dbo</property>
        
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">1</property>
        
        <!-- Select our SQL dialect -->
        <!-- <property name="dialect">org.hibernate.dialect.SQLServerDialect</property> -->
        <property name="dialect">example.ECMSQLServerDialect</property>
        
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.generate_statistics">true</property>
        <!-- <property name="use_sql_comments">true</property> -->
        
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        
        <!-- Drop and re-create the database schema on startup -->
        <!-- <property name="hbm2ddl.auto">create-drop</property> -->
        <property name="hbm2ddl.auto">update</property>
        
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        
        
        <mapping resource="example/EscalationCallOrder.hbm.xml" />
        
    </session-factory>
</hibernate-configuration>